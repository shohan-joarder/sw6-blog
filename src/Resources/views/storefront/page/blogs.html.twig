{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_content %}

    <h3 class="blog-page__title text-center"> Blog Categories </h3>

    <div class="category-area text-center mb-3">
        <a type="button" class="btn btn-outline-secondary">All</a>
        {% for category in categories %}
        <a type="button" class="btn btn-sm btn-outline-secondary">{{ category.name }}</a>
        {% endfor %}
    </div>
    
    <div class="short_description bg-gray">
        <img src="https://www.w3schools.com/howto/img_snow_wide.jpg" alt="Snow" />
        <div class="centered">
            <h1 class="blog-page__title text-center text-light"> {{ title }} </h1>
            <p>{{page_info.shortDescription}}<p>
            {% if(page_info.description) %}
                <a type="button" class="btn btn-sm bg-light">Read More</a>
            {% endif %}
        </div>
    </div>


<style>
.category-area a{
    min-width: 100px;
}

.short_description img{
    width:100%;
    height: 250px;
    object-fit: cover;
}

.short_description {
  position: relative;
  text-align: center;
  color:white;
}

.centered {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
</style>

{% endblock %}


